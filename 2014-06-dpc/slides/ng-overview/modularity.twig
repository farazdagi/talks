{% extends 'slides/layout/normal-slide.twig' %}
{% block title 'Modularity' %}
{% block style '' %}
{% block footer 'Part 1: AngularJS Overview' %}

{% block content %}
    <h3>Define your service:</h3>
    <pre class="prettyprint" data-lang="javascript">
// app/scripts/services/test.js
angular.module('demoApp')
  .service('Test', function Test() {
    this.yell = function () {
      console.log('hello!');
    };
  });</pre>

    <h3>Use the service:</h3>
    <pre class="prettyprint" data-lang="javascript">
// app/scripts/controllers/main.js
angular.module('demoApp')
  .controller('MainCtrl', function ($scope, Test) {
    Test.yell();
  });</pre>

{% endblock %}
