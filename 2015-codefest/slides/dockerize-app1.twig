{% extends 'slides/layout/normal-slide.twig' %}
{% block title 'Dockerizing Apps: App Source Code' %}
{% block style 'bigger' %}
{% block footer 'Часть 1: Обзор CoreOS' %}

{% block content %}
    <pre class="prettyprint" data-lang="go">
package main

import (
        "fmt"
        "html"
        "log"
        "net/http"
)

func main() {
        http.HandleFunc("/", func(w http.ResponseWriter, r *http.Request) {
                fmt.Fprintf(w, "Hello %s", html.EscapeString(r.URL.Path))
                log.Println("GET", html.EscapeString(r.URL.Path))
        })

        log.Fatal(http.ListenAndServe(":8080", nil))
}</pre>
